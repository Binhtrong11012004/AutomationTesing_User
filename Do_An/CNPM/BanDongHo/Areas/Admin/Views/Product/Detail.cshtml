@model BanDongHo.Domain.DataContext.SANPHAM
@{
    Layout = null;
}

<div class="form-group">
    <dl class="dl-horizontal">
        <dt>
            Mã sản phẩm
        </dt>
        <dd>
            @Model.MASP
        </dd>
        <dt>
            Tên sản phẩm
        </dt>
        <dd>
            @Model.TENSP
        </dd>
        <dt>
            Số lượng
        </dt>
        <dd>
            @Model.SOLUONG
        </dd>
        <dt>
            Thương hiệu
        </dt>
        <dd>
            @Model.THUONGHIEU.TENTH
        </dd>
        <dt>
            Đơn giá
        </dt>
        <dd>
            @String.Format("{0:0,0}", Model.DONGIA) VNĐ
        </dd>
        <dt>
            Mô tả
        </dt>
        <dd>
            @Model.MOTA
        </dd>
        <dt>
            Loại sản phẩm
        </dt>
        <dd>
            @Model.LOAISANPHAM.TENLOAISP
        </dd>
        <dt>
            Đánh giá
        </dt>
        <dd>
            @Model.DANHGIA
        </dd>
       
    </dl>
</div>

