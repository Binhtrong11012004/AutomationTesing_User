
@{
    ViewBag.Title = "SuccessView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
    }

    .success-message {
        position: relative;
        margin: auto;
        max-width: 600px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        text-align: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        padding: 20px;
    }

        .success-message .close-button {
            position: absolute;
            top: 10px;
            right: 10px;
            color: white;
            font-size: 2rem;
            font-weight: bold;
        }

            .success-message .close-button button {
                background-color: transparent;
                border: none;
                font-size: 20px;
                cursor: pointer;
            }

        .success-message h2 {
            color: #4CAF50;
            margin-bottom: 20px;
        }

        .success-message p {
            font-size: 16px;
            color: #555;
            margin-bottom: 30px;
        }
    }
</style>

<div id="alert-box" class="success-message">
    <div class="close-button">
        <button id="close-alert-button">X</button>
    </div>
    <h2>Đặt hàng thành công!</h2>
    <p>Đơn hàng sẽ được giao trong vòng 7 ngày nữa</p>
    <div id="countdown-timer" class="countdown-t">5</div>
</div>
<script>document.getElementById('close-alert-button').addEventListener('click', function () {
        window.location.href = '/Home';
    });

    function startCountdown(duration, display) {
        var timer = duration, seconds;
        var countdownInterval = setInterval(function () {
            seconds = parseInt(timer % 60, 10);

            display.textContent = seconds;

            if (--timer < 0) {
                clearInterval(countdownInterval);
                window.location.href = '/Home';
            }
        }, 1000);
    }

    window.onload = function () {
        var countdownDisplay = document.getElementById('countdown-timer');
        var countdownTime = 5;
        countdownDisplay.textContent = countdownTime;
        document.getElementById('alert-box').style.display = 'block';
        startCountdown(countdownTime, countdownDisplay);
    };</script>




